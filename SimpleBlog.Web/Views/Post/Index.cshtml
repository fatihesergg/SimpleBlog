@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Post>
@using HtmlAgilityPack

<div id="posts">
    @if (Model.Count > 0)
    {

        @foreach (var model in Model)
        {
            await Html.RenderPartialAsync("~/Views/Partial/PostCard.cshtml", model);
        }

    }
    else
    {
        <h1>Sonuç Yok</h1>
    }

</div>
@section Scripts {
    <style>

        #post_content {
            display: block;
            text-overflow: ellipsis;
            word-wrap: break-word;
            overflow: hidden;
            line-height: 1em;
            max-height: calc(4 * 1em);
            
        }
        #posts {
            display:flex;
            justify-content:center;
            align-items:center;
            flex-direction:column-reverse;
        }
    </style>
}